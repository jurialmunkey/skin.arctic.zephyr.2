<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">11</defaultcontrol>

    <controls>

        <control type="group">
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">Visible</animation>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">WindowOpen</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">Hidden</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">WindowClose</animation>
            <control type="group">
                <left>-1</left>
                <top>-1</top>
                <width>668</width>
                <height>1082</height>
                <control type="image">
                    <include condition="!Skin.HasSetting(DisableShadows)">Defs_Shadow_24</include>
                    <texture>common/gradient-solid.png</texture>
                </control>
                <control type="image">
                    <width>1</width>
                    <right>0</right>
                    <texture colordiffuse="PixelLines">common/white.png</texture>
                </control>
                <control type="image">
                    <width>1</width>
                    <right>-1</right>
                    <texture colordiffuse="darkline_separator">common/white.png</texture>
                </control>
            </control>
            <control type="image">
                <posx>498</posx>
                <posy>28</posy>
                <width>128</width>
                <height>64</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>$INFO[Player.Art(thumb)]</texture>
            </control>
            <control type="label">
                <left>33</left>
                <top>10</top>
                <width>400</width>
                <align>left</align>
                <textcolor>main_fg_100</textcolor>
                <font>font_medium_bold</font>
                <height>66</height>
                <label>$INFO[VideoPlayer.ChannelName]</label>
            </control>
            <control type="label">
                <left>33</left>
                <top>43</top>
                <width>400</width>
                <align>left</align>
                <textcolor>main_fg_70</textcolor>
                <font>font_tiny_bold</font>
                <height>66</height>
                <label>$INFO[Container(11).ListItem.StartDate]</label>
            </control>

            <control type="fixedlist" id="11">
                <left>0</left>
                <top>120</top>
                <height>980</height>
                <width>667</width>
                <focusposition>1</focusposition>
                <movement>6</movement>
                <orientation>vertical</orientation>
                <itemlayout height="120" width="667">
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="10" condition="true">Conditional</animation>
                        <visible>String.IsEqual(ListItem.Title,VideoPlayer.Title) + String.IsEqual(ListItem.ChannelNumberLabel,VideoPlayer.ChannelNumberLabel) + String.IsEqual(ListItem.EndTime,VideoPlayer.EndTime)</visible>
                    </control>
                    <control type="image">
                        <centertop>54</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>main_fg_70</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <top>5</top>
                        <width>400</width>
                        <height>66</height>
                        <align>left</align>
                        <textcolor>main_fg_70</textcolor>
                        <font>font_small_bold</font>
                        <label>$INFO[ListItem.Title]</label>
                        <selectedcolor>main_fg_70</selectedcolor>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <top>40</top>
                        <height>66</height>
                        <width>400</width>
                        <align>left</align>
                        <font>font_small</font>
                        <textcolor>main_fg_70</textcolor>
                        <label>$INFO[ListItem.StartTime]</label>
                        <selectedcolor>main_fg_70</selectedcolor>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="667">
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(ListItem.Title,VideoPlayer.Title) + String.IsEqual(ListItem.ChannelNumberLabel,VideoPlayer.ChannelNumberLabel) + String.IsEqual(ListItem.EndTime,VideoPlayer.EndTime)</visible>
                    </control>
                    <control type="image">
                        <centertop>54</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>Selected</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <top>5</top>
                        <height>66</height>
                        <width>400</width>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <font>font_small_bold</font>
                        <label>$INFO[ListItem.Title]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <top>40</top>
                        <height>66</height>
                        <width>400</width>
                        <align>left</align>
                        <font>font_small</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.StartTime]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                </focusedlayout>

            </control>
        </control>
    </controls>

</window>
