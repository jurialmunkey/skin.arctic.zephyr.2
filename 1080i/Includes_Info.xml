<includes>

    <variable name="Info_Param_IMDB_or_QUERY">
        <value condition="Container.Content(movies) + !String.IsEmpty(ListItem.Property(imdb_id))">imdb_id=$INFO[ListItem.Property(imdb_id)]</value>
        <value condition="Container.Content(movies) + !String.IsEmpty(ListItem.IMDBNumber) + !String.StartsWith(ListItem.IMDBNumber,xx)">imdb_id=$INFO[ListItem.IMDBNumber]</value>
        <value condition="[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + !String.IsEmpty(ListItem.TvShowTitle)">query=$INFO[ListItem.TvShowTitle]</value>
        <value condition="!String.IsEmpty(ListItem.Title) + !String.IsEmpty(ListItem.Year)">query=$INFO[ListItem.Title]&amp;year=$INFO[ListItem.Year]</value>
        <value condition="!String.IsEmpty(ListItem.Title)">query=$INFO[ListItem.Title]</value>
        <value>query=$INFO[ListItem.Label]</value>
    </variable>

    <variable name="Info_Param_Type">
        <value condition="Container.Content(movies) | Container.Content(set)">type=movie</value>
