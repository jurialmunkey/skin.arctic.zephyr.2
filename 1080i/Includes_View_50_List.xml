                    <param name="right" value="$PARAM[left]" />
                </include>
                <include content="View_50_List_Sides" condition="!$PARAM[flipsides]">
                    <param name="left" value="$PARAM[left]" />
                    <param name="right" value="$PARAM[right]" />
                </include>
                <height>$PARAM[height]</height>
                <include>$PARAM[controllayout]</include>
                <pagecontrol>60</pagecontrol>
                <viewtype label="$PARAM[viewtype]">$PARAM[viewtypename]</viewtype>
                <include content="View_Forced" condition="$PARAM[forced]">
                    <param name="string" value="$PARAM[viewtype]" />
                </include>
                <itemlayout height="$PARAM[itemheight]">
                    <include>$PARAM[itemlayout]</include>
                </itemlayout>
                <focusedlayout height="$PARAM[itemheight]">
                    <control type="group">
                        <visible>!Control.HasFocus($PARAM[id]) + !Control.HasFocus($PARAM[altid])</visible>
                        <include>$PARAM[itemlayout]</include>
                    </control>
                    <control type="group">
                        <visible>Control.HasFocus($PARAM[id]) | Control.HasFocus($PARAM[altid])</visible>
                        <include content="$PARAM[itemlayout]">
                            <param name="fgcolor" value="main_bg" />
                            <param name="bgcolor" value="main_fg" />
                            <param name="panelcolor" value="main_fg_100" />
                            <param name="selectbox" value="true" />
                        </include>
                    </control>
                </focusedlayout>
                <nested />
            </control>
        </definition>
    </include>

    <include name="View_50_Itemlayout">
        <param name="fgcolor" default="main_fg" />
        <param name="bgcolor" default="main_bg" />
        <param name="pad" default="20" />
        <param name="selectbox" default="false" />
        <definition>
            <control type="image">
                <visible>$PARAM[selectbox]</visible>
                <texture colordiffuse="main_fg_100" border="10">diffuse/box.png</texture>
            </control>
            <control type="group">
                <left>$PARAM[pad]</left>
                <right>$PARAM[pad]</right>
                <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,set)</visible>
                <visible>!Skin.HasSetting(UseStandardLabels) | String.IsEmpty(Container.PluginName)</visible>
                <!-- LEFT SIDE -->
                <control type="label">
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$VAR[Label_List_Left]</label>
                </control>
                <control type="image">
                    <animation effect="slide" end="-10" condition="!String.IsEqual(ListItem.DBType,episode) | String.IsEmpty(ListItem.Episode)">Conditional</animation>
                    <animation effect="slide" end="-80" condition="[String.IsEqual(ListItem.DBType,episode) + [String.IsEmpty(ListItem.Episode)]] | [!String.IsEqual(ListItem.DBType,episode) + String.IsEmpty(ListItem.Year)]">Conditional</animation>
                    <centertop>50%</centertop>
                    <left>90</left>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="$PARAM[fgcolor]_90">$VAR[Image_Overlay_List]</texture>
                </control>                
                <control type="label">
                    <animation effect="slide" end="-10" condition="!String.IsEqual(ListItem.DBType,episode) | String.IsEmpty(ListItem.Episode)">Conditional</animation>
                    <animation effect="slide" end="-80" condition="[String.IsEqual(ListItem.DBType,episode) + [String.IsEmpty(ListItem.Episode)]] | [!String.IsEqual(ListItem.DBType,episode) + String.IsEmpty(ListItem.Year)]">Conditional</animation>
                    <left>142</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$VAR[Label_List_Title]</label>
                </control>

                <!-- Videos / Tvshows / Seasons / Sets -->
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$VAR[Label_List_Right]</label>
                </control>
            </control>

            <!-- Song Tracks -->
            <control type="group">
                <left>$PARAM[pad]</left>
                <right>$PARAM[pad]</right>
                <visible>!Skin.HasSetting(UseStandardLabels) | String.IsEmpty(Container.PluginName)</visible>
                <visible>String.IsEqual(ListItem.DBType,song) + !Skin.HasSetting(UseTrackNamingTemplate)</visible>
                <control type="label">
                    <width>30</width>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$INFO[ListItem.TrackNumber]</label>
                    <visible>!ListItem.IsPlaying</visible>
                </control>
                <control type="image">
                    <width>30</width>
                    <texture colordiffuse="$PARAM[fgcolor]_100">indicator/playlist.png</texture>
                    <aspectratio>keep</aspectratio>
                    <visible>ListItem.IsPlaying</visible>
                </control>
                <control type="label">
                    <left>60</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$VAR[Label_List_Title]</label>>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>

            <!-- Basic List -->
            <control type="group">
                <left>$PARAM[pad]</left>
                <right>$PARAM[pad]</right>
                <visible>![String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,set) | [String.IsEqual(ListItem.DBType,song) + !Skin.HasSetting(UseTrackNamingTemplate)]] | [Skin.HasSetting(UseStandardLabels) + !String.IsEmpty(Container.PluginName)]</visible>
                <control type="image">
                    <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                    <centertop>50%</centertop>
                    <left>0</left>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="$PARAM[fgcolor]_90">$VAR[Image_Overlay_List]</texture>
                </control>
                <control type="label">
                    <animation effect="slide" end="-52" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                    <left>52</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                    <label>$INFO[ListItem.Label]</label>
