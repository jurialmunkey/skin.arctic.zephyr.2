                    </control>
                    <control type="panel" id="$PARAM[id]">
                        <onleft>ClearProperty(OSD_Menu,Home)</onleft>
                        <onright>ClearProperty(OSD_Menu,Home)</onright>
                        <onback>ClearProperty(OSD_Menu,Home)</onback>
