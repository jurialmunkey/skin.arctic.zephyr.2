                        <onleft>$PARAM[osd_id]</onleft>
                        <onright>$PARAM[osd_id]</onright>
                        <onback>$PARAM[osd_id]</onback>
                        <bottom>86</bottom>
                        <include>Defs_Options_Grouplist</include>
                        <itemlayout width="450" height="70">
                            <control type="label">
                                <font>font_tiny</font>
                                <align>left</align>
                                <left>30</left>
                                <aligny>center</aligny>
