<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="125">
    <defaultcontrol always="true">2</defaultcontrol>


    <controls>
        <control type="group">
            <bottom>0</bottom>
            <height>520</height>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <control type="image">
                <texture colordiffuse="panel_bg">common/white.png</texture>
            </control>
            <control type="image">
                <top>-24</top>
                <height>24</height>
                <width>100%</width>
                <texture flipy="true">common/shadow-line-24px.png</texture>
            </control>
            <control type="group">
                <control type="fixedlist" id="11">
                    <orientation>horizontal</orientation>
                    <focusposition>1</focusposition>
                    <movement>1</movement>
                    <preloaditems>2</preloaditems>
                    <bottom>40</bottom>
                    <height>370</height>
                    <ondown>9000</ondown>
                    <onup>9000</onup>
                    <itemlayout width="502" height="330">
                        <control type="group">
                            <top>20</top>
                            <left>213</left>
                            <right>-213</right>
                            <bottom>-20</bottom>
                            <control type="image">
                                <height>300</height>
                                <bordersize>20</bordersize>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="label">
                                <textcolor>panel_fg_70</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <top>300</top>
                                <height>30</height>
                                <left>20</left>
                                <right>20</right>
                                <font>font_tiny</font>
                            </control>
                            <control type="label">
                                <textcolor>panel_fg_70</textcolor>
                                <label>$INFO[ListItem.Label2]</label>
                                <top>300</top>
                                <height>30</height>
                                <left>20</left>
                                <right>20</right>
                                <font>font_tiny</font>
                                <align>right</align>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="502" height="330">
                        <control type="group">
                            <top>20</top>
                            <left>213</left>
                            <right>-213</right>
                            <bottom>-20</bottom>
                            <control type="image">
                                <height>300</height>
                                <bordersize>20</bordersize>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="group">
                                <left>10</left>
                                <right>10</right>
                                <top>10</top>
                                <height>280</height>
                                <visible>Control.HasFocus(11)</visible>
                                <include>View_Selectbox</include>
                            </control>
                            <control type="label">
                                <textcolor>panel_fg_100</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <top>300</top>
                                <height>30</height>
                                <left>20</left>
                                <right>20</right>
                                <font>font_tiny</font>
                            </control>
                            <control type="label">
                                <textcolor>panel_fg_100</textcolor>
                                <label>$INFO[ListItem.Label2]</label>
                                <top>300</top>
                                <height>30</height>
                                <left>20</left>
                                <right>20</right>
                                <font>font_tiny</font>
                                <align>right</align>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <control type="grouplist" id="9000">
                <centerleft>50%</centerleft>
                <top>40</top>
                <width>1080</width>
                <height>70</height>
                <itemgap>30</itemgap>
                <align>center</align>
                <orientation>horizontal</orientation>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>11</onup>
                <ondown>11</ondown>

                <control type="button" id="2">
                    <description>Create Bookmark button</description>
                    <label>294</label>
                    <width>330</width>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                    <texturenofocus colordiffuse="panel_fg_12" border="5">common/box.png</texturenofocus>
                    <textcolor>panel_fg_70</textcolor>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>

                <control type="button" id="3">
                    <description>Clear Bookmark button</description>
                    <label>296</label>
                    <width>330</width>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                    <texturenofocus colordiffuse="panel_fg_12" border="5">common/box.png</texturenofocus>
                    <textcolor>panel_fg_70</textcolor>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>

                <control type="button" id="4">
                    <description>Clear Bookmark button</description>
                    <label>20406</label>
                    <width>330</width>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                    <texturenofocus colordiffuse="panel_fg_12" border="5">common/box.png</texturenofocus>
                    <textcolor>panel_fg_70</textcolor>
                    <include>Dialog_Standard_Right_Buttons</include>
                    <visible>videoplayer.content(episodes)</visible>
                </control>

            </control>
        </control>

    </controls>

</window>
