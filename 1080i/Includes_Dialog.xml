    <include name="Dialog_VideoInfo_BusyIndicator">
        <control type="group">
            <top>-50</top>
            <visible>Container($PARAM[id]).IsUpdating</visible>
            <visible>Control.IsVisible($PARAM[id])</visible>
            <visible>!Window.IsVisible(DialogBusy.xml)</visible>
