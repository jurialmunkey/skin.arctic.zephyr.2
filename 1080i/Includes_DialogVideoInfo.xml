                        </include>
                        <!-- Crew -->
                        <include content="Info_Widget_Poster">
                            <param name="includecondition" value="!Skin.HasSetting(DisableInfoListCrew)" />
                            <param name="id" value="5011" />
                            <param name="groupid" value="7511" />
                            <param name="label" value="Crew" />
