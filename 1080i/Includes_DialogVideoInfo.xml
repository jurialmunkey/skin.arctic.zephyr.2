                            <param name="groupid" value="7509" />
                            <param name="label" value="$LOCALIZE[31055]" />
                            <include>Defs_InfoList_OnClick</include>
                            <include>Defs_InfoList_OnBack</include>
                            <visible>String.IsEqual(ListItem.DBType,movie) + Integer.IsGreater(Container(50).NumItems,0)</visible>
                            <content limit="25" target="videos">$VAR[Info_CastFeature]</content>
                        </include>

