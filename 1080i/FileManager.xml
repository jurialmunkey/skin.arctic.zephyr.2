<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="3">
    <defaultcontrol always="true">20</defaultcontrol>
    <controls>

        <include>Global_Background</include>
        <include>Topbar</include>
        
        <control type="scrollbar" id="62">
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
            <left>0</left>
            <width>8</width>
            <top>0</top>
            <height>1080</height>
            <onleft>noop</onleft>
            <onright>20</onright>
            <texturesliderbackground colordiffuse="main_fg_12" border="4">common/white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="main_fg_30" border="4">scrollbar/scrollv.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="$VAR[ColorHighlight]" border="4">scrollbar/scrollv.png</texturesliderbarfocus>
            <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(62) + !Container(20).Scrolling">Conditional</animation>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
        </control>
        <control type="scrollbar" id="61">
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
            <right>0</right>
            <width>8</width>
            <top>0</top>
            <height>1080</height>
            <onleft>21</onleft>
            <onright>noop</onright>
            <texturesliderbackground colordiffuse="main_fg_12" border="4">common/white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="main_fg_30" border="4">scrollbar/scrollv.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="$VAR[ColorHighlight]" border="4">scrollbar/scrollv.png</texturesliderbarfocus>
            <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(61) + !Container(21).Scrolling">Conditional</animation>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
        </control>
        <control type="group">
            <include>View_Group</include>
            <control type="group">
                <include>Animation_Left</include>
                <description>Left panel</description>
                <left>view_pad</left>
                <top>view_pad</top>
                <bottom>view_pad</bottom>
                <width>890</width>
                <control type="group">
                    <include content="Dialog_Standard_Group">
                        <param name="width" value="890" />
                        <param name="height" value="908" />
                        <param name="animation" value="false" />
                    </include>
                    <control type="label" id="101">
                        <description>Header Label</description>
                        <top>0</top>
                        <left>30</left>
                        <right>170</right>
                        <height>75</height>
                        <align>left</align>
                        <font>font_small_bold</font>
                        <haspath>true</haspath>
                        <textcolor>dialog_fg_70</textcolor>
                    </control>
                    <control type="label" id="12">
                        <description>Header Label</description>
                        <top>0</top>
                        <left>0</left>
                        <right>30</right>
                        <height>75</height>
                        <align>right</align>
                        <font>font_tiny_bold</font>
                        <textcolor>dialog_fg_70</textcolor>
                    </control>
                    <control type="list" id="20">
                        <description>Left File List</description>
                        <left>0</left>
                        <width>890</width>
                        <top>75</top>
                        <height>825</height>
                        <onleft>62</onleft>
                        <onright>21</onright>
                        <onup>20</onup>
                        <ondown>20</ondown>
                        <pagecontrol>62</pagecontrol>
                        <itemlayout height="75" width="890">
                            <control type="label">
                                <left>30</left>
                                <width>720</width>
                                <align>left</align>
                                <textcolor>dialog_fg_70</textcolor>
                                <info>ListItem.Label</info>
                            </control>

                            <control type="label">
                                <right>30</right>
                                <width>150</width>
                                <align>right</align>
                                <font>font_tiny</font>
                                <textcolor>dialog_fg_70</textcolor>
                                <info>ListItem.Label2</info>
                            </control>

                        </itemlayout>

                        <focusedlayout height="75" width="890">

                            <control type="group">
                                <width>100%</width>
                                <height>100%</height>
                                <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(20)">Conditional</animation>
                                <control type="image">
                                    <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                                </control>
                                <control type="image">
                                    <texture colordiffuse="$VAR[ColorHighlight2]">common/gradient-diffuse-horizontal.png</texture>
                                </control>
                            </control>

                            <control type="label">
                                <left>30</left>
                                <width>720</width>
                                <align>left</align>
                                <textcolor>Selected</textcolor>
                                <info>ListItem.Label</info>
                            </control>

                            <control type="label">
                                <right>30</right>
                                <width>720</width>
                                <align>right</align>
                                <textcolor>Selected</textcolor>
                                <font>font_tiny</font>
                                <info>ListItem.Label2</info>
                            </control>

                        </focusedlayout>
                    </control>
                </control>
            </control>
            <control type="group">
                <right>view_pad</right>
                <top>view_pad</top>
                <bottom>view_pad</bottom>
                <width>890</width>
                <include>Animation_Right</include>
                <control type="group">
                    <include content="Dialog_Standard_Group">
                        <param name="width" value="890" />
                        <param name="height" value="908" />
                        <param name="animation" value="false" />
                    </include>
                    <control type="label" id="102">
                        <description>Header Label</description>
                        <top>0</top>
                        <left>30</left>
                        <right>130</right>
                        <height>75</height>
                        <align>left</align>
                        <haspath>true</haspath>
                        <font>font_small_bold</font>
                        <textcolor>dialog_fg_70</textcolor>
                    </control>
                    <control type="label" id="13">
                        <description>Header Label</description>
                        <top>0</top>
                        <left>0</left>
                        <right>30</right>
                        <height>75</height>
                        <align>right</align>
                        <font>font_tiny_bold</font>
                        <textcolor>dialog_fg_70</textcolor>
                    </control>

                    <control type="list" id="21">
                        <description>Left File List</description>
                        <right>0</right>
                        <width>890</width>
                        <top>75</top>
                        <height>825</height>
                        <onleft>20</onleft>
                        <onright>61</onright>
                        <onup>21</onup>
                        <ondown>21</ondown>
                        <pagecontrol>61</pagecontrol>
                        <itemlayout height="75" width="890">
                            <control type="label">
                                <left>30</left>
                                <width>720</width>
                                <align>left</align>
                                <textcolor>dialog_fg_70</textcolor>
                                <info>ListItem.Label</info>
                            </control>
                            <control type="label">
                                <right>30</right>
                                <width>150</width>
                                <align>right</align>
                                <font>font_tiny</font>
                                <textcolor>dialog_fg_70</textcolor>
                                <info>ListItem.Label2</info>
                            </control>
                        </itemlayout>
                        <focusedlayout height="75" width="890">
                            <control type="group">
                                <width>100%</width>
                                <height>100%</height>
                                <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(21)">Conditional</animation>
                                <control type="image">
                                    <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                                </control>
                                <control type="image">
                                    <texture colordiffuse="$VAR[ColorHighlight2]">common/gradient-diffuse-horizontal.png</texture>
                                </control>
                            </control>
                            <control type="label">
                                <left>30</left>
                                <width>720</width>
                                <align>left</align>
                                <textcolor>Selected</textcolor>
                                <info>ListItem.Label</info>
                            </control>
                            <control type="label">
                                <right>30</right>
                                <width>720</width>
                                <align>right</align>
                                <textcolor>Selected</textcolor>
                                <font>font_tiny</font>
                                <info>ListItem.Label2</info>
                            </control>
                        </focusedlayout>
                    </control>
                    
                </control>
            </control>
        </control>

    </controls>

</window>
