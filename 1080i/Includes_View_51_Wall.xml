    <include name="View_51_Wall_Itemlayout">
        <param name="altid" default="999999" />
        <param name="icon" default="$VAR[Image_Poster]" />
        <param name="iconheight" default="item_icon_height" />
        <param name="icononlyheight" default="100%" />
        <param name="labelinclude" default="View_51_Wall_Label" />
        <param name="aspectratio" default="scale" />
        <param name="clearlogo" default="false" />
        <param name="circle" default="false" />
        <param name="diffuse" default="diffuse/poster-wall.png" />
        <definition>
            <control type="group">
                <right>10</right>
